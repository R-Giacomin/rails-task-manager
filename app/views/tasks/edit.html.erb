<h1>Edit a Task</h1>

<%= form_for(@task) do |f| %>

  <div class="field">
    <%= f.label :title %> <br />
    <%= f.text_area :title %> <br />
  </div>
  <div class="field">
    <%= f.label :details %> <br />
    <%= f.text_area :details %> <br />
  </div>
  <div class="field">
    <%= f.label "Completed" %> <br />
    <%= f.check_box :completed %> <br />
  </div>
   <div class="actions button small radius">
  <%= f.submit%>
  </div>
<% end %>
